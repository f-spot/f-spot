<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(FSpotTargetFramework)</TargetFramework>
    <OutputPath>..\..\..\..\bin\Extensions</OutputPath>
    <AssemblySearchPaths>$(AssemblySearchPaths);{GAC}</AssemblySearchPaths>
    <RootNamespace>FSpot.Exporters.Zip</RootNamespace>
    <AssemblyName>FSpot.Exporters.Zip</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\ZipExport.addin.xml">
      <LogicalName>ZipExport.addin.xml</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\zip_export.ui">
      <LogicalName>zip_export.ui</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Clients\FSpot.Gtk\FSpot.Gtk.csproj" />
    <ProjectReference Include="..\..\..\..\lib\Hyena\Hyena.csproj" />
    <ProjectReference Include="..\..\..\..\lib\Hyena.Gui\Hyena.Gui.csproj" />
    <ProjectReference Include="..\..\..\..\lib\gtk-sharp-beans\gtk-sharp-beans.csproj" />
    <ProjectReference Include="..\..\..\Core\FSpot\FSpot.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="gtk-sharp, Version=2.12.0.0, Culture=neutral, PublicKeyToken=35e10195dab3c99f" />
    <Reference Include="Mono.Posix" />
    <Reference Include="glib-sharp, Version=2.12.0.0, Culture=neutral, PublicKeyToken=35e10195dab3c99f" />
    <Reference Include="atk-sharp, Version=2.12.0.0, Culture=neutral, PublicKeyToken=35e10195dab3c99f" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SharpZipLib" Version="1.2.0" />
  </ItemGroup>

</Project>
